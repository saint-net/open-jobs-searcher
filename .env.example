# Конфигурация Open Jobs Searcher

# ============================================
# LLM Провайдеры
# ============================================

# OpenRouter API ключ (по умолчанию)
# Получить можно на https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here

# OpenAI API ключ (для будущего использования)
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Ollama (локальный)
# ============================================

# URL Ollama сервера (по умолчанию http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# ============================================
# Настройки поиска
# ============================================

# Локация по умолчанию
DEFAULT_LOCATION=Warszawa

# Ключевые слова по умолчанию
DEFAULT_KEYWORDS=Python Developer

# ============================================
# Настройки вывода
# ============================================

# Формат вывода (json или csv)
OUTPUT_FORMAT=json

# Директория для сохранения результатов
OUTPUT_DIR=./data

# ============================================
# LLM настройки
# ============================================

# Провайдер LLM (openrouter, ollama, openai, claude)
LLM_PROVIDER=openrouter

# Модель LLM
# Для OpenRouter: openai/gpt-oss-20b, anthropic/claude-3-haiku и др.
# Для Ollama: gpt-oss:20b, llama3.2, mistral и др.
LLM_MODEL=openai/gpt-oss-120b
